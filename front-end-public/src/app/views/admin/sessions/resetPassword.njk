{% extends "layouts/auth.njk" %}

{% block head %}
    <title>Foodfy | {{__("auth.new_password")}}</title>
{% endblock %}

{% block content %}
    <h3 class="title font-md">{{__("auth.new_password")}}</h3>
    <form
    action="/admin/reset-password"
    method="POST"
    class="submit-form"
    data-schema="resetPassword"
    >
        {% include "includes/sessions/resetPasswordFields.njk" %}
        <div class="row">
            <button type="submit" class="button">{{__("auth.new_password")}}</button>
        </div>
    </form>
{% endblock %}
