<div class="field-container">
    <label class="label" for="email">Email</label>
    <input
        type="email"
        name="email"
        id="email"
        class="field {% if validationErrorMessages.email %}error{% endif %}"
        value="{{user.email}}"
        placeholder="{{__('auth.type_your_email')}}"
        oninput="FormValidator.validate(this)"
    />
     {% if validationErrorMessages.email %}
        <span class="error-message">{{validationErrorMessages.email}}</span>
    {% endif %}
</div>

<div class="field-container">
    <label class="label" for="newPassword">{{__("auth.new_password")}}</label>
    <input
        type="password"
        name="newPassword"
        id="newPassword"
        class="field {% if validationErrorMessages.newPassword %}error{% endif %}"
        value="{{user.newPassword}}"
        placeholder="{{__('auth.type_your_password')}}"
        oninput="FormValidator.validate(this)"
    />
    {% if validationErrorMessages.newPassword %}
        <span class="error-message">{{validationErrorMessages.newPassword}}</span>
    {% endif %}
</div>

<div class="field-container">
    <label class="label" for="confirmNewPassword">{{__("auth.repeat_password")}}</label>
    <input
        type="password"
        name="confirmNewPassword"
        id="confirmNewPassword"
        class="field {% if validationErrorMessages.confirmNewPassword %}error{% endif %}"
        value="{{user.confirmNewPassword}}"
        placeholder="{{__('auth.type_your_new_password')}}"
        oninput="FormValidator.validate(this)"
    />
    {% if validationErrorMessages.confirmNewPassword %}
        <span class="error-message">{{validationErrorMessages.confirmNewPassword}}</span>
    {% endif %}
</div>

<input type="hidden" name="token" value="{{token}}" />
