{% extends "layouts/auth.njk" %}

{% block head %}
    <title>Foodfy | {{__("auth.forgot_your_password.title")}}</title>
{% endblock %}

{% block content %}
    <h3 class="title font-md">{{__("auth.forgot_your_password.title")}}</h3>
    <form
    action="/admin/recover-password"
    method="POST"
    class="submit-form"
    data-schema="recoverPassword"
    >
        {% include "includes/sessions/recoverPasswordFields.njk" %}
        <div class="row">
            <button type="submit" class="button">{{__("auth.recover")}}</button>
        </div>
    </form>
{% endblock %}
