{% extends "layouts/auth.njk" %}

{% block head %}
    <title>Foodfy | {{__("auth.login")}}</title>
{% endblock %}

{% block content %}
    <h3 class="title font-md">{{__("auth.login")}}</h3>
    <form
        action="/admin/login"
        method="POST"
        class="submit-form"
        data-schema="login"
    >
        {% include "includes/sessions/loginFields.njk" %}
        <div class="row">
            <a class="link" href="/admin/recover-password">{{__("auth.forgot_your_password.link")}}</a>
            <button type="submit" class="button">{{__("auth.access")}}</button>
        </div>
    </form>
{% endblock %}
